FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.phase1 0
);

regions
(
    // Droplet
    sphereToCell
    {
        centre (0 0 0);
        radius 0.4;
        fieldValues
        (
            volScalarFieldValue alpha.phase1 1
        );
    }
);



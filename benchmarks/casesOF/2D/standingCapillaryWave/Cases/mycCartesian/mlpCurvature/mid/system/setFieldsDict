FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
);

regions
(
//    sphereToCell
    boxToCell
    {
	centre (0 0 0);
	radius 2;
        box (-2.001 -2.001 -2.001) (2.001 2.001 2.001);
        fieldValues
        (
            volScalarFieldValue alpha.water 0
        );
    }
);



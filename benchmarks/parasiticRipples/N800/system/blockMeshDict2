 ($L  $Wm $Ha)//5
 ($L $Wp $Ha)//6
 ( 0 $Wp $Ha)//7
 ( 0  $Wm $Hw)//8
 ($L  $Wm $Hw)//9
 ($L $Wp $Hw)//10
 ( 0 $Wp $Hw)//11
);


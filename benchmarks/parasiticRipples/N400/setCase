#!/bin/sh
cd ${0%/*} || exit 1    # Run from this directory


rm -r 0
cp -r 0.orig 0
blockMesh 
topoSet -dict system/topoSetDict.c0 
refineMesh -overwrite -dict system/refineMeshDict.c0
topoSet -dict system/topoSetDict.c1
refineMesh -overwrite -dict system/refineMeshDict.c1
setWaveField

#------------------------------------------------------------------------------

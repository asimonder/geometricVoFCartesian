FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     interIsoCartFoam;
//application     interFoam;

//startFrom       startTime;
startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         3.689e-4;

deltaT          1e-12;

writeControl    adjustableRunTime;

writeInterval   5e-5;

//writeControl    timeStep;

//writeInterval   10;

purgeWrite      0;

writeFormat     ascii;

writePrecision  14;

writeCompression yes;

timeFormat      general;

timePrecision   10;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.0005;
maxAlphaCo      0.0005;
//maxCo           0.0002;
//maxAlphaCo      0.0002;

//maxCapillaryNum 3.0; //0.5;
//maxCapillaryNum 0.50; //0.5;

maxDeltaT       1e-5;

libs
(
    "libtwoPhaseProperties.so"
);

functions
{

    surfaces
    {
        type            surfaces;
        functionObjectLibs
        (
            "libsampling.so"
        );

        // Write at same frequency as fields
        writeControl    adjustableRunTime;
        writeInterval   1e-6;
        //writeControl    outputTime;
        //writeInterval   1;
        surfaceFormat   raw;
        fields
        (
            alpha.water
        );
        //interpolationScheme cellPoint;
	interpolationScheme cellPoint;
        surfaces
        (
            constantIso
            {
	      type        isoSurfacePoint;
	      //type        isoSurface;
                isoField    alpha.water;
                isoValue    0.5;
                interpolate true;
            }
        );
    }
}


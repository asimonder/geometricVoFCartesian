FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    waterWall
    {
      //type            zeroGradient;
      type            fixedFluxPressure;
      value           uniform 0;
    }
    topWall
    {
      type            totalPressure;
      p0              uniform 0;
      //type            zeroGradient;
     }
    sides1
    {
      //type            empty;
      type            cyclic;
    }
    sides2
    {
      //type            empty;
      type            cyclic;
    }
    inout1
    {
        type            cyclic;
    }
    inout2
    {
        type            cyclic;
    }
}

